<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding"
        android:minHeight="80dp">

        <ImageView
            android:id="@+id/imgCartItem"
            android:layout_width="@dimen/cart_image_size"
            android:layout_height="@dimen/cart_image_size"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCartName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvCartPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginTop="@dimen/spacing_small" />

            <TextView
                android:id="@+id/tvCartSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal: Rp 0"
                android:textSize="@dimen/text_size_extra_small"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="@dimen/spacing_extra_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="@dimen/button_small_size"
                    android:layout_height="@dimen/button_small_size"
                    android:text="-"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:textColor="@android:color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="@dimen/qty_text_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginHorizontal="@dimen/spacing_small" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="@dimen/button_small_size"
                    android:layout_height="@dimen/button_small_size"
                    android:text="+"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"
                    android:gravity="center" />
            </LinearLayout>

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="Hapus"
                android:textSize="@dimen/text_size_extra_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:backgroundTint="@android:color/holo_red_light"
                android:minHeight="@dimen/button_height_small"
                android:paddingHorizontal="@dimen/spacing_medium" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
